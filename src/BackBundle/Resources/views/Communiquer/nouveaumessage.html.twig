 {% extends "BackBundle::base.html.twig"%}

{% block title%}MESSAGERIE{% endblock title%}

{% block style %}
{% endblock style %}

{% block content %}
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Main content -->
     <section class="content-header">
       {% for msg in app.session.getflashbag.get('messagerie.success') %}
                <div class="alert alert-success mb-2" role="alert">
                  <strong>Infos</strong> {{ msg }}
                </div>
              {% endfor %}
              {% for msg in app.session.getflashbag.get('messagerie.error') %}
                <div class="alert alert-warning mb-2" role="alert">
                  <strong>Infos</strong> {{ msg }}
                </div>
              {% endfor %}
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
        
             {% include "BackBundle:Communiquer:navliste.html.twig" %}

          <div class="col-md-9">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h3 class="card-title">Nouveau message</h3>
              </div>
              <!-- /.card-header -->
              {{form_start(form)}}
              
            <div class="card-body">
                  {# <div class="form-group">
                      {{form_widget(form.professeur,{'attr':{'required':'','class':' form-control select2', 'style': '100%','placeholder': 'De'}})}}
                  </div> #}
                  <div class="form-group">
                        <!--input class="form-control" placeholder="Subject:"!-->
                    {{form_widget(form.parents,{'attr':{'required':'','class':' form-control select2', 'style': '100%'}})}}
                    </div>
                    <div class="form-group">
                       <!--input class="form-control" placeholder="Subject:"!-->
                      {{form_widget(form.objet)}}
                    </div>
                    <div class="form-group">
                         {{form_widget(form.contenumessage)}}
  
                    </div>
            </div>
              <!-- /.card-body -->
                </div>
                <div class="card-footer">
                      <div class="float-right">
                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Envoyer</button>
                      </div>
                      {# <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Annuler</button> #}
                
              <!-- /.card-footer -->
            </div>
            {{form_end(form)}}
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock content %}