{% extends "BackBundle::base.html.twig"%}

{% block title%}Enregistrer un professeur{% endblock title%}

{% block style %}
{% endblock style %}

{% block content %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Enregistrement professeur</h1>
          </div>
          <div class="col-sm-6">
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="col-md-12">
          <!-- left column -->
          <div class="col-md-8 offset-2">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Saisir les informations du professeur</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{form_start(form)}}
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- select -->
                      <div class="form-group">
                        <label>Civilité</label>
                          {{form_widget(form.civilite)}}
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <!-- select -->
                      <div class="form-group">
                        <label>Role</label>
                          {{form_widget(form.roles)}}
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    {{form_widget(form.username)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nom</label>
                    {{form_widget(form.nom)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Prenom</label>
                    {{form_widget(form.prenom)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Email</label>
                    {{form_widget(form.email)}}
                  </div>
                  <div class="form-group">
                    <h4 style="text-align: center; font-weight:bold">Adresse</h4>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Numero voie</label>
                    {{form_widget(form.numerovoie)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Nom voie</label>
                    {{form_widget(form.nomvoie)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Code postal</label>
                    {{form_widget(form.codepostal)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Ville</label>
                    {{form_widget(form.ville)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Pays</label>
                    {{form_widget(form.pays)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Téléphone</label>
                    {{form_widget(form.telephone)}}
                  </div>
                </div>
            </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
               {{form_end(form)}}
            </div>
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock content %}

{% block script %}
<script>
$(function () {
  bsCustomFileInput.init();
});
</script>
{% endblock script %}
